<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bitacoracuentas.ActualizarGastoController"
      style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-border-color: #2B3A67; -fx-border-width: 2;">

    <Label text="Actualizar Gasto" style="-fx-font-size: 18px; -fx-text-fill: #2B3A67;" />

    <Label text="Nombre del Gasto:" style="-fx-font-size: 14px; -fx-text-fill: #2B3A67;" />
    <TextField fx:id="nombreGastoField" editable="false" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF; -fx-text-fill: #4C4C4C; -fx-border-color: #2B3A67; -fx-border-width: 1;" />

    <Label text="Monto Total:" style="-fx-font-size: 14px; -fx-text-fill: #2B3A67;" />
    <TextField fx:id="montoTotalField" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF; -fx-text-fill: #4C4C4C; -fx-border-color: #2B3A67; -fx-border-width: 1;" />

    <Label text="Monto Usado:" style="-fx-font-size: 14px; -fx-text-fill: #2B3A67;" />
    <TextField fx:id="montoUsadoField" style="-fx-font-size: 14px; -fx-background-color: #FFFFFF; -fx-text-fill: #4C4C4C; -fx-border-color: #2B3A67; -fx-border-width: 1;" />

    <Button text="Guardar Cambios" onAction="#guardarCambios" style="-fx-background-color: #33A1FD; -fx-text-fill: #FFFFFF;" />
    <Label fx:id="mensajeLabel" textFill="red" style="-fx-font-size: 14px;" />
</VBox>